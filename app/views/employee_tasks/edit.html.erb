<div class="jumbotron">
  <div class="container text-center">
    <h1><%= @et.task.name %></h1>
    <p>Some text that represents "Me"...</p>
  </div>
</div>

<div class="container-fluid bg-3 text-center">
  <h3>Report Progress</h3><br>

  <div class="center">
    <div class="form-horizontal">
      <%= form_for @et, :html => {:class => 'form-horizontal'} do |f| %>
        <div class="form-group">
          <%= f.label :hours_done, :class => "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :hours_done, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="center col-sm-10">
            <%= f.submit "Update"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div><br>

<footer class="container-fluid text-center">
  <p>Footer Text</p>
</footer>
