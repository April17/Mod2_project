

<!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3"><%= @manager.name %></h1>
      <p>This is a template for a simple marketing or informational website. It includes a large callout called a jumbotron and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
      
    </div>
  </div>


<div class="container-fluid">
  <div class="row content">
      <div class="col-sm-3 sidenav hidden-xs">
        <h2>Employees</h2>
        <ul class="list-group">
                  <% @manager.employees.each do |employee| %>
                      <li class="list-group-item"><%= link_to employee.name, employee %></li>  
                  <% end %>
              </ul> 
      </div>
      <br>

      <div class="col-sm-9">
          <div class="well">
            <h4>Projects</h4>
                <ul class="list-group">
                    <% @manager.projects.each do |project| %>
                        <li class="list-group-item"><%= link_to project.name, project %> -- <%= project.description[0..100]+ "..." %></li>  
                    <% end %>
                </ul> 
          </div>
          <div class="well">
            <h4>Projects</h4>
              <% @manager.projects.each do |project| %>
               <div class="panel-group">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h4 class="panel-title">
                        <a data-toggle="collapse" href=<%= "#" + "#{project.id}" %>><%= project.name %></a>
                      </h4>
                    </div>
                    <div id=<%= project.id %> class="panel-collapse collapse">
                      <div class="panel-body"><%= project.description %></div>
                      <div class="panel-footer"><%= link_to "View Project", project %></div>
                    </div>
                  </div>
                </div>
              <% end %>
          </div>
      </div>
    </div> 
  </div>
           
        
      


     
            
         
        