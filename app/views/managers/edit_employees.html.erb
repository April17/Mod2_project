<div class="jumbotron well">
  <div class="container">
    <h1 class="display-3"><%= @user.name %></h1>
    <h3>Manager</h3>
    <p>Power is a curious thing. Who lives, Who dies. Power resides where men believe it resides. It is a trick, A shadow on the wall.</p>
  </div>
</div>

<div class="container-fluid">
  <div class="row content">
    <br>
    <div class="col-sm-12">
      <div class="well">
        <div class="panel-group">
          <div class="panel panel-default">
            <% @employees.each do |employee| %>
            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="collapse" href=<%= "#" + "#{employee.id}"  %>><%= employee.name %></a>
              </h4>
            </div>
            <div id=<%= "#{employee.id}" %> class="panel-collapse collapse">
              <div class="panel-body">Task:
                <% employee.tasks.each do |task| %>
                  <%= task.name %>
                <% end %>
              </div>
              <div class="panel-footer"><button class="btn btn-danger btn-xs" data-toggle="collapse" data-target=<%= "#delete" + "#{employee.id}"  %>> Fire!!! </button>
                <div id=<%= "delete#{employee.id}" %> class="collapse">
                  <%= form_tag "/employees/got_fired", method: :"post" do %>
                    <%= hidden_field_tag "employee_id", employee.id %>
                    <%= submit_tag "confirm", :class => "btn btn-danger btn-xs" %>
                  <% end %>
                </div>
              </div>
            </div>
            <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
