<div class="jumbotron">
  <div class="container text-center">
    <h1>New Task</h1>
    <p><%= @quote %></p>
  </div>
</div>

<div class="container-fluid text-center">
  <div class="row content">
    <div class="col-sm-2 sidenav">
    </div>
    <div class="col-sm-8 text-left">
      <% if flash[:messages] %>
        <p><%= flash[:messages] %></p>
      <% end %>
      <%= form_for @task do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :total_working_time, "Total Working Time" %>
          <%= f.number_field :total_working_time, :class => "form-control" %>
        </div>
        <div class="hidden">
          <%= f.text_field :project_id, :value => @project_id %>
        </div>
        <div class="form-group">
          <%= f.collection_check_boxes :employee_ids, @employees, :id, :name %>
        </div>
        <%= submit_tag "Submit", :class => "btn btn-default"%>
      <% end %>
    </div>
    <div class="col-sm-2 sidenav">
    </div>
  </div>
</div>
</div><br>

<footer class="container-fluid text-center">
  <p>Footer Text</p>
</footer>
